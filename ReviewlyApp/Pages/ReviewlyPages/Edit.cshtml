@page
@model ReviewlyApp.Pages.ReviwlyPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Films</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Films.FilmId" />
            <div class="form-group">
                <label asp-for="Films.FilmTitle" class="control-label"></label>
                <input asp-for="Films.FilmTitle" class="form-control" />
                <span asp-validation-for="Films.FilmTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Films.Genres" class="control-label"></label>
                <select asp-for="Films.Genres" class="form-control"></select>
                <span asp-validation-for="Films.Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Films.Year" class="control-label"></label>
                <input asp-for="Films.Year" class="form-control" />
                <span asp-validation-for="Films.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Films.Summary" class="control-label"></label>
                <input asp-for="Films.Summary" class="form-control" />
                <span asp-validation-for="Films.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Films.Rating" class="control-label"></label>
                <input asp-for="Films.Rating" class="form-control" />
                <span asp-validation-for="Films.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
